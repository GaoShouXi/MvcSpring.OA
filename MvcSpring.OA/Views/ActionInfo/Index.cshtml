                                   "sSearch": "搜索",
                                   "oPaginate": {
                                       "sFirst": "首页",
                                       "sPrevious": "上一页",
                                       "sNext": "下一页",
                                       "sLast": "末页"
                                   }
                               }
        });
        $('#example2 tbody').on('click', 'tr', function () {
            //$(this).toggleClass('selected');
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
            }
            else {
                table.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
            }
            if (table.rows('.selected').data().length > 0) {
                var Id = table.row(this).data()[0];//以这种方式取到Id
                $("#hideId").val(Id);
            }
        });
        $("#ismenu").change(function () {
            $("#trIconUrl").toggle();
        });
        $("#ismenu1").change(function () {
            $("#trIconUrl1").toggle();
        });
        bindUploadBtnClick();
        bindUploadBtnClick1();
    });
    function Delete() {
        var id = $("#hideId").val();
        $.post("/ActionInfo/Delete", { ids: id }, function (data) {
            if (data == "ok") {
                location.href = "/ActionInfo/Index";
            }
            else {
                alert("删除失败");
            }
        })
    }
    function afterAdd(data) {
        if (data == "ok") {

            location.href = "/ActionInfo/Index";
        }
        else {
            alert("添加失败");
        }
    }
    function subAddForm() {
        $("#add form").submit();

    }
    function Edit() {
        var id = $("#hideId").val();
        $.post("/ActionInfo/Find", { id: id }, function (data) {
            if (data != null) {
                $("#actionname1").val(data[0].ActionName);
                $("#remark1").val(data[0].Remark);
                $("#httpmethod1").val(data[0].HttpMethod);
                if (data[0].IsMenu == true)
                {
                    $("#ismenu1").attr("checked", "checked");
                }

                $("#url1").val(data[0].Url);
                $("#sort1").val(data[0].Sort);
                $("#imgs").attr("src", data[0].MenuIcon);


            }
            else {
                alert("数据读取错误");
            }

        })
    }

    function EditPost() {
        $.post("/ActionInfo/EditPost", { id: $("#hideId").val(), actionname: $("#actionname1").val(),httpmethod:$("#httpmethod1").val(),url:$("#url1").val(),sort:$("#sort1").val(),ismenu:$("#ismenu1").val(),remark: $("#remark1").val(),menuicon:$("#MenuIcon1").val() }, function (data) {
            if (data == "ok") {
                location.href = "/ActionInfo/Index";
            }
            else {

                alert("保存失败");
            }

        })
    }
    function bindUploadBtnClick() {
        $("#btnUploadFile").click(function () {
            $("#add form").ajaxSubmit({
                url: "/ActionInfo/UploadImage",
                type: "Post",
                success: function (data) {
                    $("#MenuIcon").val(data);
                    $("#uploadImg").html("<img src='" + data + "' style='width:40px;height:40px;'/>");
                }
            });
        });
    }
    function bindUploadBtnClick1() {
        $("#btnUploadFile1").click(function () {
            $("#edit form").ajaxSubmit({
                url: "/ActionInfo/UploadImage1",
                type: "Post",
                success: function (data) {
                    $("#MenuIcon1").val(data);
                    $("#uploadImg1").removeAttr("img");
                    $("#uploadImg1").html("<img src='" + data + "' style='width:40px;height:40px;'/>");
                }
            });
        });
    }

